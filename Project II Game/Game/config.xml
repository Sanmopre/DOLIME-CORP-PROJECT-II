<!-- Config file for the game -->

<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="1280" height="720" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

  <camera>
    <camera speed ="1" offset ="10"/>
  </camera>

  <textures>
    <texture name ="tile_highlight"  level ="0" team ="0" source ="maps/tile_highlight.png"/>
    <!-- Structures -->
    <texture name ="townhall"    level ="1" team ="0" source ="textures/structures/townhall.png"/>
    <texture name ="storage"     level ="1" team ="0" source ="textures/structures/storage.png"/>
    <texture name ="boathouse"   level ="1" team ="0" source ="textures/structures/boathouse.png"/>
    <texture name ="cons_big"    level ="0" team ="0" source ="textures/structures/cons_big.png"/>
    <texture name ="cons_medium" level ="0" team ="0" source ="textures/structures/cons_medium.png"/>
    <texture name ="cons_small"  level ="0" team ="0" source ="textures/structures/cons_small.png"/>
    <!-- Units -->
    <texture name ="boat"       level ="1" team ="1" source ="textures/units/pipo-boat_nosail.png"/>
    <texture name ="boat"       level ="2" team ="1" source ="textures/units/pipo-boat.png"/>
    <texture name ="boat"       level ="3" team ="1" source ="textures/units/pipo-ship.png"/>
    <texture name ="boat"       level ="1" team ="2" source ="textures/units/pipo-boat_nosail.png"/>
    <texture name ="boat"       level ="2" team ="2" source ="textures/units/pipo-boat_b.png"/>
    <texture name ="boat"       level ="3" team ="2" source ="textures/units/pipo-ship_b.png"/>
    <texture name ="harvester"  level ="1" team ="1" source ="textures/units/pipo-drilltank_b.png"/>
    <texture name ="harvester"  level ="2" team ="1" source ="textures/units/pipo-drilltank.png"/>
    <texture name ="harvester"  level ="1" team ="2" source ="textures/units/pipo-drilltank_c.png"/>
    <texture name ="balloon"    level ="1" team ="1" source ="textures/units/pipo-balloon.png"/>
    <texture name ="balloon"    level ="2" team ="1" source ="textures/units/pipo-airship2.png"/>
    <texture name ="balloon"    level ="1" team ="2" source ="textures/units/pipo-balloon_c.png"/>
    <texture name ="balloon"    level ="2" team ="2" source ="textures/units/pipo-airship2_b.png"/>
    <texture name ="carrier"    level ="1" team ="1" source ="textures/units/pipo-van.png"/>
  </textures>
  
  <animations>
    <animation name ="tile_highlight"  coll="0" row="0" width="64" height="64" collumns="1" frames="1" speed="1" loop="false"/>
    <!-- Structures -->
    <animation name ="ally_townhall"      coll="0" row="0" width="64" height="62" collumns="11" frames="11" speed="5" loop="true"/>
    <animation name ="enemy_townhall"     coll="0" row="1" width="64" height="64" collumns="11" frames="11" speed="5" loop="true"/>
    <animation name ="ally_storage_empty" coll="0" row="0" width="64" height="64" collumns="4" frames="1" speed="1" loop="false"/>
    <animation name ="ally_storage_low"   coll="1" row="0" width="64" height="64" collumns="4" frames="1" speed="1" loop="false"/>
    <animation name ="ally_storage_half"  coll="2" row="0" width="64" height="64" collumns="4" frames="1" speed="1" loop="false"/>
    <animation name ="ally_storage_full"  coll="3" row="0" width="64" height="64" collumns="4" frames="1" speed="1" loop="false"/>
    <animation name ="boathouse"          coll="0" row="0" width="128" height="128" collumns="1" frames="1" speed="1" loop="false"/>
    <animation name ="cons_big"           coll="0" row="0" width="96" height="64" collumns="1" frames="1" speed="1" loop="false"/>
    <animation name ="cons_medium"        coll="0" row="0" width="110" height="75" collumns="1" frames="1" speed="1" loop="false"/>
    <animation name ="cons_small"         coll="0" row="0" width="72" height="41" collumns="1" frames="1" speed="1" loop="false"/>
    <!-- Units -->
    <animation name ="unit-south"       coll="0" row="0" width="32" height="32" collumns="6" frames="2" speed="2" loop="true"/>
    <animation name ="unit-south_west"  coll="3" row="0" width="32" height="32" collumns="6" frames="2" speed="2" loop="true"/>
    <animation name ="unit-west"        coll="0" row="1" width="32" height="32" collumns="6" frames="2" speed="2" loop="true"/>
    <animation name ="unit-south_east"  coll="3" row="1" width="32" height="32" collumns="6" frames="2" speed="2" loop="true"/>
    <animation name ="unit-east"        coll="0" row="2" width="32" height="32" collumns="6" frames="2" speed="2" loop="true"/>
    <animation name ="unit-north_west"  coll="3" row="2" width="32" height="32" collumns="6" frames="2" speed="2" loop="true"/>
    <animation name ="unit-north"       coll="0" row="3" width="32" height="32" collumns="6" frames="2" speed="2" loop="true"/>
    <animation name ="unit-north_east"  coll="3" row="3" width="32" height="32" collumns="6" frames="2" speed="2" loop="true"/>
  </animations>

</config>